<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalsLevelTwo4">




    <ImageButton
        android:id="@+id/sheep_choice"
        android:layout_width="114dp"
        android:layout_height="126dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choosedog"
        app:srcCompat="@drawable/sheep" />

    <ImageButton
        android:id="@+id/lion_choice"
        android:layout_width="114dp"
        android:layout_height="125dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toStartOf="@+id/dog_choice"
        app:layout_constraintStart_toEndOf="@+id/sheep_choice"
        app:layout_constraintTop_toBottomOf="@+id/Choosedog"
        app:srcCompat="@drawable/lion" />

    <ImageButton
        android:id="@+id/dog_choice"
        android:layout_width="114dp"
        android:layout_height="125dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choosedog"
        app:srcCompat="@drawable/dog" />

    <TextView
        android:id="@+id/Choosedog"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Which one is the sheep?"
        android:textAllCaps="false"
        android:textColor="#DC1313"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>