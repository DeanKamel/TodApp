<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEABD"
    tools:context=".AlphabetLevelOne">

    <ImageButton
        android:id="@+id/s_sound_btn"
        android:layout_width="101dp"
        android:layout_height="94dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_sound"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/choice_s"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="148dp"
        android:text="s"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_sound_btn" />

    <Button
        android:id="@+id/choice_a"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginTop="148dp"
        android:text="a"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/choice_i"
        app:layout_constraintStart_toEndOf="@+id/choice_s"
        app:layout_constraintTop_toBottomOf="@+id/s_sound_btn" />

    <Button
        android:id="@+id/choice_i"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="i"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_sound_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>