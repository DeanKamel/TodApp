<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEABD"
    tools:context=".AlphabetLevelTwo4">

    <ImageButton
        android:id="@+id/o_sound_btn"
        android:layout_width="101dp"
        android:layout_height="94dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_sound"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/choice_o_4"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="148dp"
        android:text="o"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/o_sound_btn" />

    <Button
        android:id="@+id/choice_f_4"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginTop="148dp"
        android:text="f"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/choice_d_4"
        app:layout_constraintStart_toEndOf="@+id/choice_o_4"
        app:layout_constraintTop_toBottomOf="@+id/o_sound_btn" />

    <Button
        android:id="@+id/choice_d_4"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="d"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/o_sound_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>